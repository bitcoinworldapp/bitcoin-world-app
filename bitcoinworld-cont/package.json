{
  "name": "bitcoinworld-cont-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:integration": "vitest",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "check": "clarinet check",
    "test:all": "npm run check && vitest run",
    "test:cov": "npm run check && vitest run --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar-cli": "^3.0.0",
    "cross-fetch": "^4.1.0",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "@hirosystems/clarinet-sdk": "^3.4.0",
    "@stacks/network": "^7.2.0",
    "@stacks/transactions": "^7.2.0",
    "@types/node": "^24.2.0",
    "matchers": "^0.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "main": "vitest.config.js",
  "directories": {
    "test": "tests"
  },
  "keywords": []
}
